@model EntityLayer.Concrete.About

<button class="btn btn-warning" data-toggle="modal" data-target="#Modal1">
    Hakkımızda Alanı Ekle
</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Yeni Hakkımızda Girişi</h3> @*Popup başlığı*@
            </div>

            @using (Html.BeginForm("AddAbout", "About", FormMethod.Post))
            {
                <div class="modal-body">
                    @Html.Label("Hakkımda Metin 1")
                    @Html.TextBoxFor(x => x.AboutDetail, new { @class = "form-control" })
                    <br />

                    @Html.Label("Hakkımda Metin 2")
                    @Html.TextBoxFor(x => x.AboutDetail2, new { @class = "form-control" })
                    <br />

                    @Html.Label("Hakkımda Görsel 1")
                    @Html.TextBoxFor(x => x.AboutImage, new { @class = "form-control" })
                    <br />

                    @Html.Label("Hakkımda Görsel 2")
                    @Html.TextBoxFor(x => x.AboutImage2, new { @class = "form-control" })
                    <br />
                </div>

                <button class="btn btn-warning">Kaydet</button>
            }
        </div>
    </div>
</div>

